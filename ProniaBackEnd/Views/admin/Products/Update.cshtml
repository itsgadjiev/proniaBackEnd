
@using ProniaBackEnd.ViewModels.admin.products;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Update Product";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="product" asp-action="index">Products</a></li>
                    <li class="breadcrumb-item active">Update Product</li>
                </ol>
            </div>
            <h4 class="page-title">Update Product</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form enctype="multipart/form-data" method="POST" asp-controller="products" asp-action="update" id="submit-form">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="ProductName"></label>
                                <input class="form-control" asp-for="ProductName">
                                <span asp-validation-for="ProductName" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                      
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Description"></label>
                                <input class="form-control" asp-for="Description" placeholder="Description">
                                <span asp-validation-for="Description" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Order"></label>
                                <input class="form-control" asp-for="Order" placeholder="Order">
                                <span asp-validation-for="Order" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Size"></label>
                                <input class="form-control" asp-for="Size" placeholder="Size">
                                <span asp-validation-for="Size" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Price"></label>
                                <input class="form-control" asp-for="Price" placeholder="Price">
                                <span asp-validation-for="Price" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Color"></label>
                                <input class="form-control" asp-for="Color" placeholder="Color">
                                <span asp-validation-for="Color" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label>Category</label>
                                <select class="form-select" asp-for="CategoryId">
                                    <option disabled>Select the category</option>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ImageFile"></label>
                                <input class="form-control" type="file" asp-for="ImageFile"  >
                                <span asp-validation-for="ImageFile" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h4>Previous Photo</h4>
                                <img style="max-width:200px; max-height:200px;" src="~/uploads/images/@Model.Image" />
                            </div>
                        </div>
                      
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group mt-3">
                    <button class="btn btn-primary" type="submit" form="submit-form">Save</button>
                    <a asp-controller="products" asp-action="index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
