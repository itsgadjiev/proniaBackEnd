@model Slider
@{
    ViewData["Title"] = "Update";
}

<form method="post">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 @*col-xl-6*@">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Slider</h6>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInput" name="title" value="@Model.Title">
                        <label for="floatingInput">Title</label>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInput" name="description" value="@Model.Description">
                        <label for="floatingInput">Description</label>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInput" name="offer" value="@Model.OfferText">
                        <label for="floatingInput">Offer info (Can be null)</label>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" name="buttonUrl" id="floatingInput" value="@Model.ButtonUrl">
                        <label for="floatingInput">Button Url</label>
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" name="order" id="floatingInput" value="@Model.Order">
                        <label for="floatingInput">Order</label>
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="floatingInput" name="image" value="@Model.Image">
                        <label for="floatingInput">Image</label>
                        <span class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary p-2">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>