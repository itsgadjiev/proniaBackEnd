@using ProniaBackEnd.Areas.Manage.ViewModels.orders
@model OrderDetailStatusViewModel
@{
    int counter = 1;
}
<div class="col-12 " style="margin-top:30px;">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                @foreach (var item in Model.OrderItems)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Order Date</th>
                                <th>Color</th>
                                <th>Size</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@(counter++)</td>
                                <td style="width:350px;">
                                    <img src="~/uploads/images/@item.ProductOrderPhoto" alt="product image" height="50">
                                    <p class="d-inline-block align-middle mb-0">
                                        <a href="" class="d-inline-block align-middle mb-0 product-name">@item.ProductOrderName</a>
                                        <br>
                                    </p>
                                </td>
                                <td>@item.ProductOrderPrice</td>
                                <td>
                                    @item.CreatedOn
                                </td>
                                <td>
                                    @item.ProductOrderColor
                                </td>
                                <td>
                                    @item.ProductOrderSizes
                                </td>
                                <td>
                                    @item.ProductOrderQuantity
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

                <form method="post" asp-action="UpdateOrderStatus" asp-controller="order" asp-area="manage">
                    <input type="hidden" >
                    <select asp-for="OrderStatusValue">
                        @foreach (var item in Model.OrderItemStatusValues)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </form>

            </div>
            <div class="row">
                <div class="col">
                    <button class="btn btn-outline-light btn-sm px-4 " type="submit" >Save </button>
                </div><!--end col-->
                <div class="col-auto">
                    <nav aria-label="...">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul><!--end pagination-->
                    </nav><!--end nav-->
                </div> <!--end col-->
            </div><!--end row-->
        </div><!--end card-body-->
    </div><!--end card-->
</div> <!-- end col -->
